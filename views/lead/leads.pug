doctype html
html(lang='en')
  include ../common/head.pug
  +head("Leads")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md1.text-center.text-md-left.pr-md-5
            h1.lead Leads
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Actions
                  th(scope="col")
                tr
              tbody
                for lead in leads
                  tr(id=lead.id) 
                    td
                      span #{lead.email}
                    td 
                      a(href="/lead/" + lead.id) Details
                    td 
                      button(onclick=`deleteLead('${lead.id}')`).btn.btn-primary.mb-5 Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascript/leads.js')